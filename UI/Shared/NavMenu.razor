<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Викторины</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Домой
            </NavLink>
        </li>
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="quizzes" Match="NavLinkMatch.All">
                            <span class="oi oi-home" aria-hidden="true"></span> Мои викторины
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="randomquiz">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Случайная викторина
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="allquizzes">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Все викторины
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="quizzesbytag">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Поиск по тегам
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="stats">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Моя статистика
                        </NavLink>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="randomquiz">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Случайная викторина
                        </NavLink>
                    </li>
                </NotAuthorized>
            </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
